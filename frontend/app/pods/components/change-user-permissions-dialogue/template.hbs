{{#bs-modal position="center" open=open size="lg" onHide=(action 'clear') as |modal|}}
    {{#modal.header}}
        <h4 class="modal-title"> Change User Permissions of {{userNameOrEmail}}</h4>
    {{/modal.header}}
    {{#modal.body}}
        <div class="mb-2"> Select roles you want to give to this user. </div> {{searchable-select
            content=permissionSets
            multiple=true
            sortBy="name"
            optionLabelKey="name"
            selected=selectedPermissionSets
            closeOnSelection=false
            prompt="Select Roles"
            on-change=(action (mut user.permission_sets))}}
        {{/modal.body}}
    {{#modal.footer as |footer|}}
        {{#bs-button onClick=(action 'clear') type="danger" }}Cancel{{/bs-button}}
        {{#bs-button onClick=(action "saveUserPermissions") class="btn-primary" type="primary" }}Save{{/bs-button}}
    {{/modal.footer}}
{{/bs-modal}}