<div class="ui segment violet no-border-radius">
        <div class="ui secondary menu violet">
            <a class="item">
                {{#ui-dropdown class="ui dropdown menu-item"}}
                    <div class="default text">Dashboards</div>
                    <i class="dropdown icon"></i>
                    <div class="menu">
                        {{#each dashboards as |dashboard|}}
                            <div class="item" {{action 'goToDashboard' dashboard}}>
                                <span class="description">{{dashboard.questions.length}} questions</span>
                                {{dashboard.title}}
                            </div>
                        {{/each}}
                        <div class="item">
                            Create New Dashboard
                        </div>
                    </div>
                    {{/ui-dropdown}}
            </a>
            <a class="item">
                Question Banks
            </a>
            {{#link-to "questions.new" class="item"}}
                New Question
            {{/link-to}}
            <div class="right menu">
                <a class="item">Aditya</a>
                <div class="ui right aligned category search item">
                    <div class="ui transparent icon input">
                        <input class="prompt" type="text" placeholder="Search
                                                                       animals...">
                        <i class="search link icon"></i>
                    </div>
                    <div class="results"></div>
                </div>
            </div>
        </div>
</div>
