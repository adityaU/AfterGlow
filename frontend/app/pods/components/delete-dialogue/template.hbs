{{#bs-modal position="center" open=open onHide=(action 'clearDelete') as |modal|}}
    {{#modal.body}} Are you sure , you want to delete this {{entityName}}? {{/modal.body}}
    {{#modal.footer as |footer|}}
        {{#bs-button onClick=(action 'clearDelete') type="danger" }}No Way{{/bs-button}}
        {{#bs-button onClick=(action 'delete' entity) class="btn-primary" type="primary" }}Yes, I am Sure{{/bs-button}}
    {{/modal.footer}}
{{/bs-modal}}