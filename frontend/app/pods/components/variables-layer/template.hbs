<div class="row variable-layer">
        {{#each variables as |variable|}}
    <div class="{{if showVariables "col-4" "col-3"}}">
                <div class="form-group">
                        <label class="form-label text-default">{{capitalize variable.name}}</label>
                        {{#if variable.showDatePicker}}
                            {{ui-calendar date=variable.date_value onChange=(action (mut variable.date_value)) placeholder=variable.default_date  }}
                        {{else}}
                            {{#if variable.showMultiSelect}}
                {{accordion-multiselect label=null selection=variable.default_options options=variable.questionFilterOptions labelProperty='name' placeholder="Select Few Options"}}
                            {{else}}
                                {{input class="form-control" type="text" value=variable.value placeholder=variable.default}}
                            {{/if}}
                        {{/if}}
                </div>
    </div>
        {{/each}}
</div>
