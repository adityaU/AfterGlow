<div class="pl-3 pt-0">
    {{#each users as |user|}}
        <div class="card mb-3">
            <div class="card-body p-3 {{if user.is_deactivated "bg-gray-lightest"}}">
                <div class="row">
                    <div class="col-6">
                        <div class="d-flex align-items-center">
                            <span class="avatar mr-2 text-white bg-primary" style="background-image: url({{user.profile_pic}})">
                            </span>
                            <div>
                                <h5 class=" m-0 text-default "> {{user.full_name}} </h5>
                                <small class="text-muted "> {{user.email}} </small>
                            </div>
                        </div>
                    </div>
                    <div class="col-6 text-right ">
                        <button data-tooltip="Change User permissions " data-inverted=" " class="btn btn-link text-primary
                                "
                            {{action 'showChangePermissionDialogue' user}}> EDIT PERMISSIONS </button>
                        {{#if user.is_deactivated}}
                            <button data-tooltip="Activate User" data-inverted=" " class="btn btn-link text-red
                                "
                                {{action 'activateUser' user}}> ACTIVATE </button>
                        {{else}}
                            <button data-tooltip="Deactivate User" data-inverted=" " class="btn btn-link text-red
                                "
                                {{action 'deactivateUser' user}}> DEACTIVATE </button>
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>
    {{/each}}
</div> {{change-user-permissions-dialogue open=togglePermissionsModal user=toBeChangedUser permissionSets=permissionSets saveUserPermissions='saveUser'}}