<div class="pl-3 pt-0">
    <form class="card">
        <div class="card-body">
            <div class="form-group">
                <label class="form-label">Name</label>
                {{input type="text" name="first-name" class=(if team.errors.name "form-control is-invalid" "form-control") placeholder="What do you call it?" value=team.name}}
                {{#if team.errors.name}}<div class="invalid-feedback">{{team.errors.name.0.message}} </div>{{/if}}
            </div>
            <div class="form-group">
                <label class="form-label">Description</label>
                {{input class="form-control" type="text" name="first-name" placeholder="two words about this team?" value=team.description}}
            </div>
            <div class="form-group">
                <label class="form-label">Users</label>
                {{searchable-select content=users
            multiple=true
            sortBy="email"
            optionLabelKey="email"
            selected=selectedUsers
            closeOnSelection=false
            prompt="Add Users"
            on-change=(action 'mutUser')}}
            </div>
            <div class="form-group">
                <label class="form-label">Accessible Databases</label>
                {{searchable-select content=databases
            multiple=true
            sortBy="name"
            optionLabelKey="name"
            selected=selectedDatabases
            closeOnSelection=false
            prompt="Select Databases that should be accessible to this team"
            on-change=(action 'mutDatabase')}}
            </div>
        </div>
    </form>
</div>