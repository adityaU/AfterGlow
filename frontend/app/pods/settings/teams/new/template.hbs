<div class="pl-3 pt-0">
    <form class="card">
        <div class="card-body">
            <div class="form-group">
                <label class="form-label">Name</label>
                {{input type="text" name="first-name" class=(if team.errors.name "form-control is-invalid" "form-control") placeholder="What do you call it?" value=team.name}}
                {{#if team.errors.name}}<div class="invalid-feedback">{{team.errors.name.0.message}} </div>{{/if}}
            </div>
            <div class="form-group">
                <label class="form-label">Description</label>
                {{input  class="form-control" type="text" name="first-name" placeholder="two words about this team" value=team.description}}
            </div>
        </div>
        <div class="card-footer text-right">
            <button class="btn btn-primary" type="submit" {{action 'saveTeam'}}>SAVE</button>
        </div>
    </form>
</div>