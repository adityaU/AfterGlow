<div class="pl-3 pt-0">
    {{#each organizations as |organization|}}
    <div class="card mb-3">
        <div class="card-body p-3">
            <div class="row">
                <div class="col-4">
                    <div class="d-flex align-items-center">
                        <span class="avatar mr-2 text-white bg-primary">
                            <b class="text-white">G</b>
                        </span>
                        <div>
                            <h6 class="m-0 text-default"> {{capitalize organization.name}} </h6>
                            <small class="text-muted"> {{organization.google_domain}} </small>
                        </div>
                    </div>
                </div>
                <div class="col-4">
                    <small class="text-muted"> {{organization.users.length}} Users </small>
                </div>
                <div class="col-4 text-right">
                    {{#link-to 'settings.organizations.edit' organization.id class="btn btn-link text-primary"}} EDIT
                    {{/link-to}}
                    {{#if organization.is_deactivated}}
                    <button data-tooltip="Deactivate Organization" data-inverted="" class="btn btn-link text-red"
                        {{action 'activate' organization}}> ACTIVATE </button>
                    {{else}}
                    <button data-tooltip="Deactivate Organization" data-inverted="" class="btn btn-link text-red"
                        {{action 'deactivate' organization}}> DEACTIVATE </button>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
    {{else}}
    <div class="card">
        <div class="card-body text-center"> You do not have any organizations yet. <div>
                {{#link-to 'settings.organizations.new'}}
                <div class="btn btn-link p-0">
                    <i class="fe fe-plus"></i> ADD NEW ORGANIZATION </div>
                {{/link-to}}
            </div>
        </div>
    </div>
    {{/each}}
</div>