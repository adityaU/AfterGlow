<div class="ui segment half">
<form class="ui form">
    <div class="field">
        <label>Name</label>
        {{input type="text" name="first-name" placeholder="What do you call it?" value=db.name}}
        {{input type="hidden" name="first-name" placeholder="First Name" value="postgres"}}
    </div>

    <div class="field">
        <label>Host Url</label>
        {{input type="text" name="first-name" placeholder="Host endpoint" value=db.config.host_url}}
    </div>

    <div class="field">
        <label>Host Port</label>
        {{input type="text" name="first-name" placeholder="Host Port" value=db.config.host_port}}
    </div>

    <div class="field">
        <label>Database Name</label>
        {{input type="text" name="first-name" placeholder="Database Name" value=db.config.db_name}}
    </div>

    <div class="field">
        <label>Database Username</label>
        {{input type="text" name="first-name" placeholder="Username" value=db.config.username}}
    </div>

    <div class="field">
        <label>Database Password</label>
        {{input type="text" name="first-name" placeholder="Password" value=db.config.password}}
    </div>
    <button class="ui button" type="submit" {{action 'saveDatabase'}}>Save</button>
</form>
</div>
