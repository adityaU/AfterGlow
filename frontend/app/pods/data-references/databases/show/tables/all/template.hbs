<div class="header collapse d-lg-flex p-0">
    <div class="container">
        <div class="nav nav-tabs border-0 flex-column flex-lg-row py-3 px-0">
            <div class="row">
                <div class="col-12">
                    <div class="text-default">
                       Tables in database: {{database.name}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container px-0 mt-5">

    <div class="form-group">
      <div class="input-group input-icon">
        <span class="input-group-prepend" id="basic-addon3">
          <span class="input-group-text">Search a Table</span>
        </span>
            {{input value=query class="form-control" placeholder="Search Table" }}
        <div class="input-icon-addon">
          <i class="fe fe-search"></i>
        </div>
      </div>
    </div>

    {{#if loading}}

                        <div class="dimmer active">
                          <div class="loader text-primary"></div>
                          <div class="dimmer-content">
                          </div>
                        </div>
    {{else}}
        <div class="card">
            <div class="table-responsive">
                 <table class="table table-hover table-outline table-vcenter text-nowrap card-table">
            <thead>
                <tr>
                    <th class="w-3">Table Name</th>
                    <th class="w-12">Description</th>
                    {{#if canEdit}}
                    <th class="w-1">Actions</th>
                    {{/if}}
                </tr>
            </thead>
            <tbody>
                {{#each tables as |table|}}
                    <tr>
                        <td>
                            
                            {{#link-to 'data_references.databases.show.tables.show' database.id table.id}}
                                {{table.human_name}}
                            {{/link-to}}
                        </td>
                        <td>
                            {{#if table.editMode}} 

                                <div class="form-group mb-0">
                                        {{input value=table.description class="form-control" placeholder="short description of this table" }}
                                </div>
                            {{else}}
                                {{table.description}}
                            {{/if}}
                        </td>
                        {{#if canEdit}}
                        <td>
                            {{#if table.editMode}} 
                                <span>  
                                    {{bs-tooltip placement=top title="Save"}}  
                                    <i class="fe fe-save text-gray mx-1" {{action "saveTable" table}}></i>
                                </span>
                                <span>  
                                    {{bs-tooltip placement=top title="Cancel Editing"}}  
                                    <i class="fe fe-x text-gray mx-1" {{action "cancelEdit" table}}></i>
                                </span>
                            {{else}}
                                
                                <span >
                                    {{bs-tooltip placement=top title="Edit"}}  
                                    <i class="fe fe-edit text-gray mx-1" {{action "editTable" table}}></i>
                                </span>
                            {{/if}}
                            {{#link-to 'data_references.databases.show.tables.show.explore' database.id table.id}}
                                <span>  
                                    {{bs-tooltip placement=top title="Explore Data"}}  
                                    <i class="fe fe-zoom-in text-gray mx-1"></i>
                                </span>
                            {{/link-to}}
                        </td>
                        {{/if}}
                    </tr>
                {{/each}}
            </tbody>
        </table>  
            </div>
        </div>
    {{/if}}
</div>
